{
	"compilerOptions": {
		"target": "ES2019",
		"module": "CommonJS",
		"declaration": true,
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"lib": ["ES2019"]
	},
	"include": ["src"]
}
